extends ../layout

block title
	title РАБОТЫ

block content_style
	link(rel='stylesheet', type='text/css', href='/styles/works.css' + version)

block content_scripts
	script(type='text/javascript', src='/scripts/works.js' + version)

block content
	.content_menu_block
		a.content_menu_item(href='/works/design') графический дизайн
		a.content_menu_item(href='/works/graphic') графика
		a.content_menu_item(href='/works/art') живопись
		a.up(href='#') сделать заказ
	.content_images_block
		each work in works
			img.content_images_item(src=work.image, id=work._id)
	.content_preview_block
		img.preview_image
		.preview_description